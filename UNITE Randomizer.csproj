  <ItemGroup>
    <Content Include="UNITE Ball.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="UNITE Ball.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>