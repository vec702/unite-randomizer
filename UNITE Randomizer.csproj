    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <PackageIcon>UNITE Ball.png</PackageIcon>
    <ApplicationIcon>UNITE Ball.ico</ApplicationIcon>
